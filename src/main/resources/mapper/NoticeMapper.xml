<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluemsun.island.dao.mapper.NoticeMapper">

    <resultMap id="BaseResultMap" type="Notice">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="noticeTime" column="notice_time" jdbcType="TIMESTAMP"/>
        <result property="status" column="notice_status" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,content,
        notice_time,notice_status
    </sql>

    <select id="selectById" parameterType="int" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tb_notice
        where id = #{id}
    </select>

    <delete id="deleteById" parameterType="int">
        delete
        from tb_notice
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="Notice">
        insert into tb_notice
            (user_id, content)
        values (#{userId,jdbcType=INTEGER}, #{content})
    </insert>

    <insert id="insertSelective" parameterType="Notice">
        insert into tb_notice
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">userId,</if>
            <if test="content != null">content,</if>

        </trim>

        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="content != null">content = #{content},</if>
        </trim>
    </insert>

    <update id="updateByIdSelective" parameterType="Notice">
        update tb_notice
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="status != null">
                notice_status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="updateById" parameterType="Notice">
        update tb_notice
        set user_id       = #{userId},
            content       = #{content},
            notice_status = #{status}
        where id = #{id}
    </update>
</mapper>
